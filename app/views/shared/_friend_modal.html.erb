<!-- Modal -->
<div class="modal fade" id="myModal<%=friend.first_name%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
      <!-- button close -->
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title text-center" id="myModalLabel"><%= friend.first_name %><%= t ('friends.friendsinterest') %></h3>
      </div>
      <!-- common movies -->
      <div class="modal-body">
        <!-- no common movies -->
        <% if common_movies.empty? %>
          <div>
            <h4><%= t ('nocommon') %> <%= friend.first_name %></h4>
          </div>
        <!-- common movies   -->
        <% else %>
          <div>
            <h4><%= t ('common') %></h4>
            <% common_movies.each do |movie_id| %>
              <div>
                <%= link_to  movie_path(movie_id) do %>
                  <div class="modal-item">
                    <div class="modal-item-group-one">
                      <div class="modal-item-body">
                        <% movie = Movie.find(movie_id) %>
                        <%= image_tag(movie.poster_url, class: "movie-item-image hidden-xs")%>
                      </div>
                      <div class="modal-item-body">
                        <span><%= movie.title %>
                        <br>
                        <%= movie.release_date.to_date.year %></span>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      <!-- uncommon movies --> <!-- uncommon movies except movies i saw or movies he saw -->
        <% uncommon_movies = friend.interests.select do |interest| %>
          <% movie = interest.movie %>
          <% !common_movies.include?(movie.id) && interest.watched_on.nil? %>
        <% end %>
        <!-- no uncommon movies -->
        <% if uncommon_movies.empty? %>
          <div><h4><%= friend.first_name %> <%= t ('friends.nomore') %></h4></div>
        <!-- uncommon movies -->
        <% else %>
          <div>
            <h4><%= t ('friends.uncommon') %> <%= friend.first_name %></h4>
            <% uncommon_movies.each do |movie| %>
              <div>
                <div class="modal-item">
                  <div class="modal-item-group-one">
                    <div class="modal-item-body">
                      <% movie = Movie.find(movie.movie_id) %>
                      <%= link_to (image_tag(movie.poster_url, class: "movie-item-image hidden-xs")), movie_path(movie)%>
                    </div>
                    <div class="modal-item-body">
                      <span><%= movie.title %>
                      <br>
                      <%= movie.release_date.to_date.year %></span>
                    </div>
                  </div>
                  <div class="modal-item-body" id="modal-end">
                    <span><%= link_to icon('plus-circle'), interests_path(movie_id: movie, friend_id: friend.id), method: :post, remote: true, class: "movie-add-btn", id: "movie-add-#{movie.id}" %></span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <!-- close button -->
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t ('friends.close') %></button>
      </div>
    </div>
  </div>
</div>
