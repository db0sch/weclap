
<div class="container padded" id="scrollable-list">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="col-xs-10 col-xs-offset-1">
        <ul class="list-inline text-center flex-tabs">
          <li><a href=""><h3 class="tabs-title flex-tab-item tab-active-search">Results</h3></li>
          <li><a href=""><h3 class="tabs-title flex-tab-item">Top 100 Imdb</h3></a></li>
          <li><a href=""><h3 class="tabs-title flex-tab-item">On theater</h3></a></li>
          <li><a href=""><h3 class="tabs-title flex-tab-item">On VOD</h3></a></li>
        </ul>
      </div>
    </div>
    <% list.each do |movie| %>
      <%= render 'shared/movie_item', movie: movie, friends: @friends, interest: nil %>
    <% end %>
    <a href="#" class="back-to-top"><i class="fa fa-arrow-circle-up" id="back_to_top_arrow" ></i></a>
  </div>
</div>

<%= content_for(:after_js) do %>
  <script type="text/javascript">
    $('body').prepend('<a href="#" class="back-to-top"></a>');
  </script>
<% end %>
