<div class="container padded" id="scrollable-list">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="col-xs-10 col-xs-offset-1">
        <ul class="list-inline text-center flex-tabs">
          <li>
            <form action="/movies" method="get">
              <input name="results" class="hidden">
              <button type="submit" class="none">
                <h3 class="tabs-title flex-tab-item">Results</h3>
              </button>
            </form>
          </li>
          <li>
            <form action="/movies" method="get">
              <input name="top100" class="hidden">
              <button type="submit" class="none">
                <h3 class="tabs-title flex-tab-item">Top 100 Imdb</h3>
              </button>
            </form>
          </li>
          <li>
            <form action="/movies" method="get">
              <input name="ontheater" class="hidden">
              <button type="submit" class="none">
                <h3 class="tabs-title flex-tab-item">On theater</h3>
              </button>
            </form>
          </li>
          <li>
            <form action="/movies" method="get">
              <input name="onvod" class="hidden">
              <button type="submit" class="none">
                <h3 class="tabs-title flex-tab-item">On VOD</h3>
              </button>
            </form>
        </li>
        </ul>
      </div>
    </div>
    <% list.each do |movie| %>
      <%= render 'shared/movie_item', movie: movie, friends: @friends, interest: nil %>
    <% end %>
  </div>
</div>
