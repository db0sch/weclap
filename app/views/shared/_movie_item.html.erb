<div class="col-xs-12">
  <div class="movie-item" <%= "id = movie-#{interest.id}" unless interest.nil?  %>>
    <% if movie.poster_url %>
      <%= image_tag movie.poster_url, alt: movie.title, class: "movie-item-image hidden-xs" %>

    <% else %>
      <%= image_tag "http://placehold.it/40x60", alt: "placeholder", class: "movie-item-image hidden-xs" %>
    <% end %>
    <!-- <img src="http://placehold.it/40x60" alt="kudoz" class="movie-item-image hidden-xs"> -->
    <div class='movie-item-body'>
      <h3><%= link_to movie.title, movie %></h3>
      <div class="crew">
        <p id="directed">Directed by:</p>
        <p>Cast:</p>
      </div>
      <div class="movie-infos">
        <p id="year_released"><%= link_to movie.release_date.to_date.year %></p>
        <i class="fa fa-clock-o" aria-hidden="true" id="clock"></i>
        <p><%= link_to movie.runtime %> min</p>
      </div>
    </div>
    <ul class="list-inline movie-item-controls hidden-sm hidden-xs">
    <% if current_user.movies.include?(movie) %>
      <div class='starrr' <%= "id = #{interest.id}" unless interest.nil?  %>></div>
      <%= link_to icon('times'), interest_path(interest), method: :delete, remote: true, data: { confirm: "Are you sure?" } unless interest.nil? %>
    <% else %>
      <%= link_to icon('plus-circle'), interests_path(movie_id: movie), method: :post, remote: true, class: "movie-add-btn", id: "movie-add-#{movie.id}" %>
    <% end %>
    <div id="avatar_down">
    <% if !@friends.nil? %>
      <% @friends.each do |b| %>
        <% User.find(b).interests.each do |interest| %>
          <% if movie.id == interest.id %>
             <%= image_tag User.find(b).picture, class: "avatar" %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    </div>

<!--     <i class="fa fa-plus-circle" aria-hidden="true" id="add_to_watchlist"></i> -->
    </ul>
  </div>
</div>

