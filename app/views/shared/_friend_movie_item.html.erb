<div>
  <%= link_to movie do %>
    <div class="modal-item">
      <div class="modal-item-group-one">
        <div class="modal-item-body">
          <%= image_tag(movie.poster_url, class: "movie-item-image hidden-xs")%>
        </div>
        <div class="modal-item-body">
          <span><%= movie.title %><br>
            <%= movie.release_date.to_date.year if movie.release_date %></span>
        </div>
      </div>
      <% if friend %>
        <div class="modal-item-body" id="modal-end">
          <span><%= link_to icon('plus-circle'), interests_path(movie_id: movie.id, friend_id: friend.id), method: :post, remote: true, class: "movie-add-btn", id: "movie-add-#{movie.id}" %></span>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
