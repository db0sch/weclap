      <%# end %>

      <!-- Button (call-to-action) -->
      <%= link_to t(".top_call_to_action", default: "Movies"), movies_path, class: "navbar-wagon-item navbar-wagon-button btn" %>

      <%= link_to t(".top_call_to_action", default: "Watchlist"), watchlist_path(current_user), class: "navbar-wagon-item navbar-wagon-button btn" %>


      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%# link_to root_path, class: "navbar-wagon-brand" do %>
            <%# image_tag current_user.picture, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <%# end %>
          <%= link_to root_path, class: "navbar-wagon-brand dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" do %>
            <%= image_tag current_user.picture, class: "avatar" %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_friendships_path(current_user) do %>
                <i class="fa fa-users"></i> <%= t ".friends", default: "Friends" %>
              <% end %>
            </li>
            <li>
              <%= link_to watchlist_path(current_user) do %>
                <i class="fa fa-film"></i>  <%= t ".watchlist", default: "Watchlist" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
