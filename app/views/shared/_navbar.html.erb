  <!-- Center Navigation -->
  <div class="navbar-wagon-left hidden-xs hidden-sm">
    <!-- navbar element empty -->
    <%= link_to(user_signed_in? ? watchlist_path(current_user) : root_path) do %>
      <%= image_tag "logo.png", class: "clap-logo" %>
    <% end %>
  </div>

  <div class="navbar-wagon-center hidden-xs hidden-sm">

  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <%#link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
        <!-- <div class="badge-container"> -->
          <!-- <i class="fa fa-envelope-o" style=" color:whitesmoke;"></i> -->
