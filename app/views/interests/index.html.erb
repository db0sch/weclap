<%= render 'shared/interests_list', list: @watchlist %>


<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $('.starrr').starrr({
      change: function(e, value){
        var rating = {"rating": value};
        $.ajax({
           type: "PATCH",
           url: "/interests/" + e.currentTarget.id,
           data: rating,
           success: function(data) {
             $('#movie-' + e.currentTarget.id).slideUp();
           }
        });
      }
    });
  <% end %>
<% end %>
